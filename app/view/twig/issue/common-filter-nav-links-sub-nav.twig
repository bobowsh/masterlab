
<div class="scrolling-tabs-container sub-nav-scroll">
    <div class="fade-left">
        <i class="fa fa-angle-left"></i>
    </div>
    <div class="fade-right">

    </div>

    <div class="nav-links sub-nav scrolling-tabs is-initialized">
        <ul class="container-fluid">
            <li style="padding-right: 4px;" class="filter_nav_li  {% if (sys_filter == '' and active_id is empty) %} <?= 'active_underline' ?>{% endif %}">
                <a title="所有事项" href="<?= issue_main_url?>"><span >所有事项</span>
                </a>
            </li>
            {% for  key, projectFilter in ProjectFilterArr %}
                {% if  projectFilter.is_show =='1' %}
                <li class="filter_nav_li  {% if (sys_filter == projectFilter.name) %} <?= 'active_underline' ?>{% endif %}">
                    <a title="<?=projectFilter.description?>" href="<?= issue_main_url?>?sys_filter=<?=projectFilter.key?>">
                        <span><?=projectFilter.name?></span>
                        {% if ( unResolveCount and projectFilter.key=='my_unsolved') %}
                            <span style="color: #d41716;"> (<?= unResolveCount ?>)</span>
                        {% endif %}
                    </a>
                </li>
                {% endif %}
            {% endfor %}

            {% if ( project.is_display_issue_catalog and project_catalog) %}
                <li class="filter_nav_li" style="border-left: 1px solid #ddd; padding-left: 12px;" title="通过标签进行分类">
                    分 类：
                </li>
                {% for catalog in project_catalog %}
                    <li class="filter_nav_li  {% if (sys_filter == 'catalog_'~catalog.id) %} <?= 'active_underline' ?>{% endif %}">
                        <a title="<?=catalog.description?>" href="<?= issue_main_url?>?sys_filter=catalog_<?=catalog.id?>" style="color:<?=catalog.font_color?>; font-size: 12px;"><span><?=catalog.name?></span>
                        </a>
                    </li>
                {% endfor %}
            {% endif %}

            <li class="filter_nav_li" style="border-left: 1px solid #ddd; padding-left: 12px;">
                个人：
            </li>
            {% for favFilter in showFavFilters %}
                <li class="filter_nav_li  {% if (active_id ==  favFilter.id  or fav_filter==favFilter.id ) %} <?= 'active_underline filter_active_underline' ?>{% endif %}">
                    <a title="<?= favFilter.name ?>" href="<?= issue_main_url?>?fav_filter=<?= favFilter.id ?>" style="color:#fc9403; font-size: 12px; padding: 11px 4px 9px;"><span><?= favFilter.name ?></span>
                    </a>
                </li>
            {% endfor %}
            {% if ( otherFavFilters) %}
                <li class="filter_nav_li  ">
                    <a  style="color:#fc9403; font-size: 12px; padding: 11px 4px 9px;" id="custom-filter-more" title="更多的过滤器 <a>管理</a>" href="#"><span>更 多</span><i class="fa fa-caret-down"></i>
                    </a>
                </li>
            {% endif %}
        </ul>

    </div>

</div>
